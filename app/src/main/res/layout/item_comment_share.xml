<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comment_head"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="19px"
            android:layout_marginTop="20px"
            android:src="@drawable/comment_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26px"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_comment_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="华城飞客"
                    android:textColor="@color/tv_blue" />

                <TextView
                    android:id="@+id/tv_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="55分钟前"
                    android:textColor="@color/tv_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40px"
                android:paddingTop="@dimen/dimen_5dp"
                android:text="我擦，你就是传说中的段子手，久仰久仰！别闹别闹，怎么还要给我挠挠呢，哈哈哈哈。。。。"
                android:textColor="@color/tv_black" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="25px"
        android:background="@color/tv_gray6" />


</LinearLayout>
