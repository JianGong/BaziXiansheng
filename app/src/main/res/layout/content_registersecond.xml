<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recondregister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_marginTop="64px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收验证码的手机号:"
            android:textColor="@color/tv_chatgray9"

            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_registersecond_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textColor="@color/tv_brown"

            android:textSize="28px" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_register2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_recondregister"
        android:layout_margin="20px"
        android:background="@drawable/shape_container"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/registersecond_verfication"
            android:layout_width="500px"
            android:layout_height="88px"
            android:layout_below="@+id/register_input_phone_num"
            android:background="@null"
            android:hint="验证码"
            android:padding="20px"
            android:textColorHint="@color/hint_input_gray" />

        <View
            android:layout_width="1px"
            android:layout_height="40px"
            android:layout_gravity="center_vertical"
            android:background="#dcdcdc"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/getverification_register2"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="20px"
            android:text="获取验证码"
            android:textColor="@color/tv_brown"
            android:textSize="28px" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_registerfirst_next"
        android:layout_width="fill_parent"
        android:layout_height="92px"
        android:layout_below="@+id/ll_register2"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/selector_btn_small"
        android:text="下一步"
        android:textColor="@color/tv_white"
        android:textSize="32px" />

</RelativeLayout>
